<h1>Services</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Active?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @services.each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= number_to_currency(s.price, unit: "$", precision: 0) %></td>
        <td><%= s.is_active ? "Yes" : "No" %></td>
        <td><%= link_to "View", service_path(s) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p class="muted">Mostrando <%= @services.size %> servicios.</p>
